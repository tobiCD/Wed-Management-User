<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: <%= customer.id %> -<%= customer.name %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <button class="btn btn-sm btn-outline-secondary">?</button>
      </div>
    </div>
  </div>
  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active"><%= customer.id %>- <%= customer.name  %></li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>Last Updated: <%= new Date(customer.updated_at).toUTCString()  %></b>
      </div>
    </div>
    
  </div>
  
  
  <form action="/edit" method="POST" >      
    <div class="row form-group mb-4">
      <input type="hidden" name="id" value="<%= customer.id %>">
    </div>
    <div class="row form-group mb-4">
      <div class="col">
        <label for="firstName">Name</label>
        <input type="text" class="form-control" id="firstName" name="name" value="<%= customer.name %>" placeholder="Name" required>
      </div>
  
      <div class="col">
        <label for="lastName">Email</label>
        <input type="text" class="form-control" id="lastName" name="email" value="<%= customer.email %>" placeholder="Email" required>
      </div>
    </div>
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="tel">City</label>
        <input type="text" class="form-control" id="tel" name="city" value="<%= customer.city %>" placeholder="City" required>
      </div>
  
      <div class="col">
        <label for="email">Telephone</label>
        <input type="text" class="form-control" id="email" name="telephone" value="<%= customer.telephone %>" placeholder="Telephone" required>
      </div>
    </div>
     
    <div class="form-group mb-4">
        <label for="details">Customer Details</label>
        <textarea class="form-control" name="detail" id="details" cols="30" rows="12" placeholder="Customer Details"><%= customer.detail %></textarea>
    </div>
    
    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">Update Customer</button>
  
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Customer</button>
  
    </div>
  
  </form>
  
  
  
  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">You are about to remove a customer record.</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>
            This will remove the customer record of <b class="fw-bold"><%= customer.id %> -<%= customer.name %></b><br/>
            Are you sure?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/edit/<%= customer.id %>" method="POST" class="position-relative">
            
            <button type="submit" class="btn btn-primary">Yes, Remove Customer</button>
          </form>
        </div>
      </div>
    </div>
  </div>